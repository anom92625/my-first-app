# Copy this file to .env and fill in your values

# Flask secret key (generate with: python -c "import secrets; print(secrets.token_hex())")
SECRET_KEY=your-secret-key-here

# Anthropic API key for article summarization
# Get yours at https://console.anthropic.com
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Email / SMTP settings (for sending newsletters)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
EMAIL_FROM=your-email@gmail.com
EMAIL_FROM_NAME=My Daily Brief

# Optional: NewsAPI key for broader article coverage
# Get yours at https://newsapi.org
NEWS_API_KEY=your-newsapi-key-here

# Newsletter send time (24h format, UTC)
NEWSLETTER_SEND_HOUR=7
NEWSLETTER_SEND_MINUTE=0
